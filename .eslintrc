{
    "extends": "react-app",
    "ecmaFeatures": {
      "jsx": true
    },
    "env": {
        "browser": true
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "curly": [
            "error",
            "all"
        ],
        "default-case": "error",
        "dot-notation": "error",
        "eol-last": "error",
        "func-call-spacing": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true,
                "beforeColon": false
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "after": true,
                "before": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "max-len": [
            "error",
            120
        ],
        "no-console": "warn",
        "no-else-return": [
            "error",
            {
                "allowElseIf": false
            }
        ],
        "no-magic-numbers": [
            "warn",
            {
                "ignore": [0, 1],
                "ignoreArrayIndexes": true
            }
        ],
        "no-mixed-spaces-and-tabs": "error",
        "no-multi-str": "error",
        "no-multiple-empty-lines": "error",
        "no-spaced-func": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": "warn",
        "no-with": "error",
        "one-var": "off",
        "operator-linebreak": [
            "error",
            "after"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-blocks": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "asyncArrow": "always",
                "named": "never"
            }
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "space-infix-ops": "error",
        "space-unary-ops": [
            "error",
            {
                "nonwords": false,
                "overrides": {},
                "words": true
            }
        ],
        "valid-jsdoc": "error"
    }
}